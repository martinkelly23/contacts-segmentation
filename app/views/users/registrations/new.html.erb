<div class="row">
  <div class="col-lg-4 col-lg-offset-4 well">
    <h3 class="text-center"><%= t('New user')%></h3>
    <br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label t('name') %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('state') %><br />
    <%= f.text_field :state, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('job') %><br />
    <%= f.text_field :job, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('age') %><br />
    <%= f.number_field :age, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('email') %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t('characters minimum')%>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label t('password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit t('Sign up'), class: 'btn btn-success'  %>
  </div>
<% end %>
<br>
<%= render "users/shared/links" %>
 </div>
 </div>
