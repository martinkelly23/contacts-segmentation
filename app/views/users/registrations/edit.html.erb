<div class="row">
  <div class="col-lg-4 col-lg-offset-4 well">
    <h3 class="text-center">Edit profile</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label t('name') %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('state') %><br />
    <%= f.text_field :state, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('job') %><br />
    <%= f.text_field :job, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('age') %><br />
    <%= f.number_field :age, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label t('password') %> <i><%=t('blank if you do not want to change it')%></i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> <%=t('characters minimum')%></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label t('password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label t('current password') %> <i><%=t('we need your current password to confirm your changes')%></i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit t('update'), class: 'btn btn-primary'%>
  </div>
<% end %>

<h3><%=t('delete account')%></h3>

<p><%= button_to t('delete account'), registration_path(resource_name), data: { confirm: "Estas seguro?" }, method: :delete %></p>

<%= link_to t('back'), :back %>

</div>
</div>
